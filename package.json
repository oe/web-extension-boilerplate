{
  "name": "extension-boilerplate",
  "version": "2.0.0",
  "license": "MIT",
  "author": "Saiya",
  "repository": "https://github.com/evecalm/extension-boilerplate/",
  "description": "browser extension boilerplate base on vue & webpack",
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "scripts": {
    "start": "parcel src/manifest.json --host localhost --target webext-dev --config @parcel/config-webextension",
    "dev": "npm run start",
    "build": "parcel build src/manifest.json --target webext-prod --config @parcel/config-webextension"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.1",
    "parcel": "^2.0.1"
  }
}
