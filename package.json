{
  "name": "extension-boilerplate",
  "version": "2.0.0",
  "license": "MIT",
  "author": "Saiya",
  "repository": "https://github.com/evecalm/extension-boilerplate/",
  "description": "browser extension boilerplate base on vue & webpack",
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      },
      "distDir": "./dist"
    },
    "webext-prod": {
      "distDir": "./dist"
    }
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "parcel watch src/manifest.json --host localhost --target webext-dev --config @parcel/config-webextension",
    "clean": "node scripts/clean.js",
    "prebuild": "npm run clean",
    "build": "parcel build src/manifest.json --no-source-maps --target webext-prod --config @parcel/config-webextension",
    "postbuild": "npm run zip-ext",
    "zip-ext": "node scripts/zip-ext.js"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.10.3",
    "@parcel/transformer-sass": "^2.10.3",
    "chrome-types": "^0.1.246",
    "parcel": "^2.10.3",
    "zip-folder": "^1.0.0"
  },
  "engines": {
    "node": ">=12.10.0"
  }
}
