{
  "name": "Extension-Boilerplate",
  "description": "template for web extension",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background/index.ts"
    ]
  },
  "page_action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.github.com/*"
      ],
      "css": [
        "content-scripts/style.scss"
      ],
      "js": [
        "content-scripts/index.ts"
      ],
      "run_at": "document_idle"
    }
  ]
}